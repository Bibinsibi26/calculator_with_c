#include <stdio.h>

int main() {
    float num1,num2,result;
    char op;
    
    printf("enter the first number you want");
    scanf("%f",&num1);
    
    printf("enter the operater ");
    scanf(" %c",&op);
    
    printf("enter the second number ");
    scanf("%f",&num2);
    
    switch(op)
    {
    case '+':
    result=num1+num2;
    printf("result=%f",result);
    break;
    case'*':
    result=num1*num2;
    printf("result=%f",result);
    break;
    case'-':
    result=num1-num2;
    printf("result=%f",result);
    break;
    case'/':
    result=num1/num2;
    printf("result=%f",result);
    break;
    
    default:
    printf("myree");
    
    }

    return 0;
}
